{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"outDir": "out",
		"lib": [
			"dom",
			"es2017"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}